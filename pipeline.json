{
    "pipeline": {
      "name": "github-lambda-ecs-demo-pipeline",
      "roleArn": "arn:aws:iam::<account-id>:role/<pipeline-role>",
      "artifactStore": {
        "type": "S3",
        "location": "github-lambda-ecs-demo"
      },
      "stages": [
        {
          "name": "Source",
          "actions": [
            {
              "name": "Source",
              "actionTypeId": {
                "category": "Source",
                "owner": "AWS",
                "provider": "CodeCommit",
                "version": "1"
              },
              "outputArtifacts": [
                {
                  "name": "sourceArtifact"
                }
              ],
              "configuration": {
                "RepositoryName": "github-lambda-ecs-demo",
                "BranchName": "main"
              }
            }
          ]
        },
        {
          "name": "Build",
          "actions": [
            {
              "name": "Build",
              "actionTypeId": {
                "category": "Build",
                "owner": "AWS",
                "provider": "CodeBuild",
                "version": "1"
              },
              "inputArtifacts": [
                {
                  "name": "sourceArtifact"
                }
              ],
              "outputArtifacts": [
                {
                  "name": "buildArtifact"
                }
              ],
              "configuration": {
                "ProjectName": "github-lambda-ecs-demo"
              }
            }
          ]
        },
        {
          "name": "Deploy",
          "actions": [
            {
              "name": "DeployECS",
              "actionTypeId": {
                "category": "Deploy",
                "owner": "AWS",
                "provider": "ECS",
                "version": "1"
              },
              "inputArtifacts": [
                {
                  "name": "buildArtifact"
                }
              ],
              "configuration": {
                "ClusterName": "github-lambda-ecs-demo",
                "ServiceName": "github-lambda-ecs-demo",
                "FileName": "imagedefinitions.json"
              }
            }
          ]
        }
      ]
    }
  }
  